body
    position: relative

.loading

    &:after
        content: ''
        top: 0
        left: 0
        width: 100%
        height: 100%
        position: fixed
        z-index: 100
        background: rgba(255, 255, 255, .5)

    &:before
        content: 'Загрузка...'
        width: 100%
        height: 30px
        top: 0
        left: 0
        line-height: 30px
        position: fixed
        text-align: center
        background-color: #fff

.load-more-btn
    position: fixed
    bottom: 10px
    width: 200px
    height: 30px
    left: 50%
    margin-left: -100px

@import 'table';